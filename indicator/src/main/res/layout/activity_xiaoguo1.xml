<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="vertical"
    tools:context=".xiaoguo.Xiaoguo1Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circle LayoutManager" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_circle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Circle Scale LayoutManager" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_circleScale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Carousel LayoutManager" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_Carousel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery ayoutManager" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_Gallery0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gallery ayoutManager" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_Gallery1"
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_margin="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rotate LayoutManager" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_Rotate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Scale LayoutManager" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_Scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="20dp" />

    </LinearLayout>
</android.support.v4.widget.NestedScrollView>